<h1><%= @work.title %> Info:</h1>

<h3 style="text-align: start">Description:</h3>
<p style="margin-top: 25px"><%= @work.description %></p>

<div style="margin-bottom: 25px">
    <% if @work.link.present? %>
        <%= link_to "Creating Stable Diffusion Models Using Dreambooth", @work.link, target: "_blank" %>

    <% else %>
        <ul class="work-list">
            <% @work.list.each do |item| %>
                <li><%= item %></li>
            <% end %>
        </ul>
    <% end %>
</div>

<%= link_to "Back to Portfolio", works_path, class: "btn btn-primary" %>
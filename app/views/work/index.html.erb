<h1 class="text-center">Portfolio:</h1>

<% @works.each do |work| %>
    <div class="row">
        <div class="col-4"></div>

        <div class="col-4">
            <h3 class="text-center"><%= work.title %></h3>
            <%= link_to (image_tag work.picture, class: "lower-opacity"), work_path(work) %>
        </div>

        <div class="col-4"></div>
    </div>
<% end %>

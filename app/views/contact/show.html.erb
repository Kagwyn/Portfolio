<h1>Contact Me:</h1>

<%= form_with model: @request, url: contact_path, data: {turbo: false} do |f| %>
    <div class="row">
        <div class="col-6">
            <%= f.label :fname, "First Name", class: "form-label" %>
            <%= f.text_field :fname, class: "form-control", :required => true %>
        </div>

        <div class="col-6">
            <%= f.label :lname, "Last Name", class: "form-label" %>
            <%= f.text_field :lname, class: "form-control", :required => true %>
        </div>
    </div>

    <div class="row" style="margin-top:50px">
        <div class="col-8">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", :required => true %>
        </div>

        <div class="col-4">
            <%= f.label :phone, "Phone", class: "form-label" %>
            <%= f.text_field :phone, class: "form-control", placeholder: "(optional)" %>
        </div>
    </div>

    <div class="row" style="margin-top:50px">
        <div class="col-12">
            <%= f.label :message, "Message", class: "form-label" %>
            <%= f.text_area :message, class: "form-control", :required => true %>
        </div>
    </div>

    <div class="row" style="margin-top:50px">
        <div class="col-12">
            <%= f.submit "Submit", :class => "btn btn-primary" %>
        </div>
    </div>
<% end %>